{
  "Safety": {
    "Enabled": true,
    "Endpoint": "https://api.openai.com/v1/moderations",
    "ApiKey": "test-api-key",
    "OrganizationId": "test-org-id",
    "Model": "text-moderation-latest",
    "FallbackBehavior": "FailOpen",
    "InputPolicy": {
      "Thresholds": {
        "Hate": 2,
        "SelfHarm": 2,
        "Sexual": 2,
        "Violence": 2,
        "Suggestive": 3,
        "Profanity": 4,
        "PersonalData": 1,
        "AgeInappropriate": 3
      },
      "BlockOnViolation": true,
      "RequireMultipleCategories": false,
      "MinimumCategoryViolations": 2,
      "MaxRiskScore": 70
    },
    "OutputPolicy": {
      "Thresholds": {
        "Hate": 3,
        "SelfHarm": 2,
        "Sexual": 3,
        "Violence": 3,
        "Suggestive": 4,
        "Profanity": 5,
        "PersonalData": 1,
        "AgeInappropriate": 4
      },
      "BlockOnViolation": true,
      "RequireMultipleCategories": false,
      "MinimumCategoryViolations": 2,
      "MaxRiskScore": 60
    },
    "Resilience": {
      "TimeoutInMilliseconds": 3000,
      "MaxRetries": 2,
      "RetryDelayInMilliseconds": 1000,
      "CircuitBreakerThreshold": 5,
      "CircuitBreakerDurationInSeconds": 30,
      "UseExponentialBackoff": true,
      "MaxBackoffMultiplier": 8.0
    },
    "Filtering": {
      "Enabled": false,
      "DefaultAction": "Mask",
      "MaskCharacter": "*",
      "RedactionText": "[REDACTED]",
      "PreserveLength": true
    },
    "Audit": {
      "Enabled": true,
      "LogFullContent": false,
      "LogContentHashes": true,
      "LogMetadata": true,
      "RetentionDays": 90,
      "AlertThreshold": 4
    },
    "RateLimit": {
      "Enabled": false,
      "MaxEvaluationsPerWindow": 1000,
      "WindowInSeconds": 60,
      "PerUserLimiting": true,
      "PerIPLimiting": false,
      "ExceededAction": "Throttle"
    }
  }
}